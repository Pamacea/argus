{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022"],
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./lib",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./lib/*"],
      "@lib/*": ["./lib/*"],
      "@tests/*": ["./tests/*"]
    }
  },
  "include": ["lib/**/*"],
  "exclude": ["node_modules", "dist", "tests", "mcp"]
}
